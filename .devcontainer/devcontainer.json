{
    "name": "C++23 Competitive Programming",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ],
            "settings": {
                "C_Cpp.default.cppStandard": "c++23",
                "C_Cpp.default.compilerPath": "/usr/local/bin/g++",
                "editor.formatOnSave": true
            }
        }
    },
    "runArgs": ["--rm"],
    "mounts": [
        "source=cp-home,target=/home/vscode,type=volume"
    ],
    "remoteUser": "vscode"
}
